<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LayoutBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        tools:context="br.com.fatec.jade.TelaResultadoTrueProduto"

        >

        <ImageView
            android:id="@+id/imgMarca"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:minHeight="120dp"
            android:minWidth="120dp"
            android:src="@drawable/imgitem" />

        <TextView
            android:id="@+id/marcaNomeMTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgMarca"
            android:text="NOME DA MARCA"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgMarca"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:src="@drawable/no2" />

        <TextView
            android:id="@+id/statusMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imgStatus"
            android:layout_alignTop="@+id/imgStatus"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imgStatus"
            android:text="Testado em animais"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textoAlternativas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgStatus"
            android:layout_marginTop="50dp"
            android:text="ALTERNATIVAS"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imgMarcaAlternativa1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/textoAlternativas"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/imgitem"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:minHeight="120dp"
            android:minWidth="120dp" />

        <TextView
            android:id="@+id/nomeMarcaAlternativa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMarcaAlternativa1"
            android:layout_marginLeft="20dp"
            android:text="Nome da Marca"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imgMarcaAlternativa2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/imgitem"
            android:layout_alignBaseline="@+id/imgMarcaAlternativa1"
            android:layout_below="@+id/textoAlternativas"
            android:layout_marginTop="20dp"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:minHeight="120dp"
            android:minWidth="120dp" />

        <TextView
            android:id="@+id/nomeMarcaAlternativa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_below="@id/imgMarcaAlternativa2"
            android:text="Nome da Marca"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="30dp" />


    </RelativeLayout>
</ScrollView>